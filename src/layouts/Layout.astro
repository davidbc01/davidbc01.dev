---
import "@fontsource-variable/onest";
import HeadAdds from "../components/HeadAdds.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="keywords" content="davidbc01, Portafolio, Portfolio, Desarrollo Web, Astro, JavaScript, HTML, CSS, DiseÃ±o UX/UI, Desarrollo Frontend" />
        <meta name="author" content="davidbc01" />
        <meta name="viewport" content="width=device-width" />
        <meta property="og:title" content="Portafolio de davidbc01 - Estudiante de Desasrrollo de Aplicaciones Web" />
        <meta property="og:description" content="Portafolio desarrollado con Astro por davidbc01, estudiante de desarrollo de aplicaciones web." />
        <meta property="og:image" content="/favicon.svg" />
        <meta property="or:url" content="https://davidbc01-dev.vercel.app/" />
        <link rel="canonical" href="https://davidbc01-dev.vercel.app/" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <HeadAdds />
    </head>
    <body class="bg-zinc-200 dark:bg-zinc-900">
        <slot />
        <Footer />
    </body>
</html>

<style is:global>
    html {
        font-family: "Onest", sans-serif;
        scroll-behavior: smooth;
    }
    body {
        cursor: none !important;
    }

    ::-webkit-scrollbar {
        width: 10px !important;
    }
    ::-webkit-scrollbar-thumb {
        background-color: #737373 !important;
    }
    ::-webkit-scrollbar-track {
        background-color: #a3a3a3 !important;
    }
</style>
